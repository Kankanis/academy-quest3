<% content_for :title, "Showing quest" %>

<div class="md:w-2/3 w-full h-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Showing quest</h1>

  <h2 class="text-2xl mb-4"><%= @quest.name %></h2>
  <p class="text-gray-500 mb-4">Status: <%= @quest.status ? "Completed" : "Pending" %></p>
  <p class="text-gray-500 mb-4">Created at: <%= @quest.created_at.strftime("%B %d, %Y") %></p>
  <p class="text-gray-500 mb-4">Updated at: <%= @quest.updated_at.strftime("%B %d, %Y") %></p>


  <%= link_to "Back to quests", quests_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
</div>
